// database
datasource db {
    provider = "postgresql"
    // url      = "postgresql://localhost/?user=postgres&password=root"
    url      = "postgresql://postgres:root@localhost:5432"
}

// generator
generator client {
    provider             = "prisma-client-py"
    recursive_type_depth = 5
}

// data models
model RECPIES {
    id            Int     @id @default(autoincrement())
    name          String
    slug          String?
    video_url     String?
    thumbnail_url String?

    USER_likes_RECPIES USER_likes_RECPIES[]
}

model USERS {
    id                 Int                  @id @default(autoincrement())
    name               String?
    USER_likes_RECPIES USER_likes_RECPIES[]
}

model USER_likes_RECPIES {
    user      USERS   @relation(fields: [USER_id], references: [id])
    USER_id   Int
    recipe    RECPIES @relation(fields: [RECIPE_id], references: [id])
    RECIPE_id Int

    @@id([USER_id, RECIPE_id])
    @@map("USER_likes_RECPIES")
}
